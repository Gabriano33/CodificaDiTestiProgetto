    <text xml:lang="fr" xml:id="Prol_1_NUM_CAR_3_14-fr" subtype="manuscript">
        <body>
            <div type="pagina" facs="pagina14" n="14">
                <pb n="14" facs="#full_PAG14"/>
                <ab type="paragrafo" n="1" xml:id="PAR_1_PAG_14"> <!-- primo paragrafo-->
                    <lb xml:id="Prol_1_NUM_CAR_14_R1" n="1" facs="#PAG14_R1"/> 
                    Si l’<term ref="#etudeLinguistique">étude <mod type="subst"><del rend="overstrike"><gap reason="illegible" extent="8" atLeast="6" atMost="9" unit="character"/></del><add resp="#FDS" place="above"><choice><abbr>linguistiq<am>.</am></abbr><expan resp="#Bouq-Engl">linguistiq<ex>ue</ex></expan></choice></add></mod></term> de 
                    <mod type="subst"><del rend="overstrike"><unclear reason="illegible" cert="low">tel ou tel de gus</unclear><gap reason="illegible" extent="6" atLeast="6" atMost="7" unit="words"/></del><add resp="#FDS" place="above"><choice><orig>+</orig><reg resp="#Bouq-Engl">plus</reg></choice>ieurs<term ref="#langues"><choice><orig>lgus</orig><reg resp="#Bouq-Engl">langues</reg></choice></term>ou d’<choice><orig>1</orig><reg resp="#Bouq-Engl">une</reg></choice>seule</add></mod>
                    <lb xml:id="Prol_1_NUM_CAR_14_R2" n="2" facs="#PAG14_R2"/>
                    reconnaît pour <add resp="#FDS" place="above">son</add> but <add resp="#FDS" place="above">final et</add> principal<mod type="subst"><del rend="overstrike"><unclear reason="overstrike" cert="high">l'étude</unclear></del></mod><add resp="#FDS" place="above">la vérification et la recherche</add> des <term ref="#lois">lois</term>
                    <lb xml:id="Prol_1_NUM_CAR_14_R3" n="3" facs="#PAG14_R3"/>
                    et des <term ref="#procédés">procédés</term> <add resp="#FDS" place="above"><term ref="#universels">universels</term></add>du <term ref="#langage">langage</term>, on demande jusqu’à 
                    <lb xml:id="Prol_1_NUM_CAR_14_R4" n="4" facs="#PAG14_R4"/>
                    quel point ces études <choice><orig><del rend="overstrike"><unclear reason="illegible" cert="high">s</unclear></del><reg resp="#Bouq-Engl">sont</reg></orig></choice> leur place dans 
                    <lb xml:id="Prol_1_NUM_CAR_14_R5" n="5" facs="#PAG14_R5"/>
                    une <orgName ref="#facultéDesLettres">Faculté des Lettres</orgName>, <mod type="subst"><del rend="overwritten"><unclear reason="illegible" cert="low">t</unclear><gap reason="illegible" extent="2" atLeast="2" atMost="2" unit="words"/><add resp="#FDS" place="superimposed">ou si</add></del></mod>elles n’auraient
                    <lb xml:id="Prol_1_NUM_CAR_14_R6" n="6" facs="#PAG14_R6"/>
                    pas une place également convenable <choice><orig>D</orig><reg resp="#Bouq-Engl">dans</reg></choice> <choice><orig>1</orig><reg resp="#Bouq-Engl">une</reg></choice> <orgName ref="#facultéDesSciences"><choice><abbr>Fac<am>.</am></abbr></choice><expan resp="#Bouq-Engl">Fac<ex>ulté</ex></expan></orgName>
                    <lb xml:id="Prol_1_NUM_CAR_14_R7" n="7" facs="#PAG14_R7"/>
                    <orgName ref="#facultéDeSciences">des Sciences</orgName> ?
                </ab>

                <ab type="paragrafo" n="2" xml:id="PAR_2_PAG_14"> <!-- secondo paragrafo-->
                    <lb xml:id="Prol_1_NUM_CAR_14_R8" n="8" facs="#PAG14_R8"/>
                    Ce serait renouveler la <del rend="overstrike"><unclear reason="overstrike" cert="high">fameuse</unclear></del>
                    <lb xml:id="Prol_1_NUM_CAR_14_R9" n="9" facs="#PAG14_R9"/>
                    question <add resp="#FDS" place="above">bien connue</add> agitée autrefois par <name type="person" ref="#MaxMüllier">Max Müllier</name> et
                    <lb xml:id="Prol_1_NUM_CAR_14_R10" n="10" facs="#PAG14_R10"/>
                    <name type="person" ref="#Schleicher">Schleicher</name> <choice><orig><del rend="overstrike"><gap reason="illegible" extent="3" atLeast="3" atMost="4" unit="words"/></del><reg resp="#Bouq-Engl"></reg></orig></choice> ; il y a eu, <add resp="#FDS" place="above"><choice><abbr>MM<am>.</am></abbr><expan resp="#Bouq-Engl">Messieurs</expan></choice> <choice><orig> </orig><reg resp="#Bouq-Engl">,</reg></choice> <choice><orig>vs</orig><reg resp="#Bouq-Engl">vous</reg></choice> le savez</add>
                    , un temps où la <term ref="#scienceDuLangage"><choice><orig>sci</orig><reg resp="#Bouq-Engl">science</reg></choice></term>
                    <lb xml:id="Prol_1_NUM_CAR_14_R11" n="11" facs="#PAG14_R11"/>
                    <term ref="#scienceDuLangage">du langage</term> s’était persuadée à elle-même
                    <lb xml:id="Prol_1_NUM_CAR_14_R12" n="12" facs="#PAG14_R12"/>
                    qu’elle était <choice><orig>1</orig><reg resp="#Bouq-Engl">une</reg></choice> <term ref="#scienceNaturelle">science naturelle</term>, <add resp="#FDS" place="above">presque <choice><orig>1</orig><reg resp="#Bouq-Engl">une</reg></choice> <term ref="#sciencePhysique"><choice><abbr>sc<am>.</am></abbr><expan resp="#Bouq-Engl"><ex>sc</ex>ience</expan></choice> <choice><orig>φysiq</orig><reg resp="#Bouq-Engl">physique</reg></choice></term></add>
                    ; je ne <del rend="strikethrough"><unclear reason="illegible" cert="high">revi</unclear></del>
                    <lb xml:id="Prol_1_NUM_CAR_14_R13" n="13" facs="#PAG14_R13"/>
                    songe pas à démontrer <mod type="subst"><del rend="overstrike"><unclear reason="overstrike" cert="low">la fausse que</unclear></del><add resp="#FDS" place="above">comme quoi</add></mod> c’était
                    <lb xml:id="Prol_1_NUM_CAR_14_R14" n="14" facs="#PAG14_R14"/>
                    une profonde illusion de sa part, mais au
                    <lb xml:id="Prol_1_NUM_CAR_14_R15" n="15" facs="#PAG14_R15"/>
                    contraire à constater que ce débat <choice><abbr>es</abbr><expan resp="#Bouq-Engl">es<ex>t</ex></expan></choice> clos
                    <lb xml:id="Prol_1_NUM_CAR_14_R16" n="16" facs="#PAG14_R16"/>
                    et bien clos.
                </ab>


                <ab type="paragrafo" n="3" xml:id="PAR_3_PAG_14"> <!-- terzo paragrafo-->
                    <lb xml:id="Prol_1_NUM_CAR_14_R17" n="17" facs="#PAG14_R17"/>
                    À mesure <add resp="#FDS" place="above">q'</add> on a mieux compris
                    <lb xml:id="Prol_1_NUM_CAR_14_R18" n="18" facs="#PAG14_R18"/>
                    la véritable nature <mod type="subst"><del rend="overstrike"><unclear reason="overstrike" cert="high">du</unclear></del><add resp="#FDS" place="above">des <term ref="#faitsDeLangage">faits de</term></add></mod> <term ref="#FaitsDeLangage">langage</term>, qui
                    sont si près de <choice><abbr>ns</abbr><expan resp="#Bouq-Engl">nous</expan></choice>, mais <choice><abbr>d'aut<am>.</am></abbr><expan resp="#Bouq-Engl">d'aut<ex>ant</ex></expan></choice> <choice><orig>+</orig><reg resp="#Bouq-Engl">plus</reg></choice> <choice><abbr>diff<am>.</am></abbr><expan resp="#Bouq-Engl">diff<ex>iciles</ex></expan></choice> à
                    <choice><abbr>saisi</abbr><expan resp="#Bouq-Engl">saisi<ex>r</ex></expan></choice> <choice><abbr>d</abbr><expan resp="#Bouq-Engl">d<ex>ans</ex></expan></choice> <choice><abbr>le</abbr><expan resp="#Bouq-Engl">le<ex>ur</ex></expan></choice> <term ref="#essence"><choice><abbr>ess</abbr><expan resp="#Bouq-Engl">ess<ex>ence</ex></expan></choice></term> , il est devenu
                    <lb xml:id="Prol_1_NUM_CAR_14_R19" n="19" facs="#PAG14_R19"/>
                    plus évident que la <term ref="#scienceDuLangage">science du langage</term> est une
                    <lb xml:id="Prol_1_NUM_CAR_14_R20" n="20" facs="#PAG14_R20"/>
                    <term ref="#scienceHistorique">science historique</term> et rien d’autre qu’ <choice><orig>1</orig><reg resp="#Bouq-Engl">une</reg></choice> <term ref="#ScienceHistorique">science</term>
                    <lb xml:id="Prol_1_NUM_CAR_14_R21" n="21" facs="#PAG14_R21"/>
                    <term ref="#scienceHistorique">historique</term>.
                </ab>
            </div>
            


            <div type="pagina" facs="pagina3" n="3">
                <pb n="3" facs="#Full_PAG3" /> <!-- Inizio seconda pagina -->
                <ab type="paragrafo" n="1" xml:id="PAR_1_PAG_3"> <!-- primo paragrafo-->
                    <lb xml:id="Prol_1_NUM_CAR_3_R1" n="1" facs="#PAG3_R1"/>
                    <gap reason="editorial"><desc>une race totalement distincte du Magyar, qu’au sein de l’empire autrichien le Magyar à son tour représente</desc></gap> une race totalement distincte du Tchèque et
                    <lb xml:id="Prol_1_NUM_CAR_3_R2" n="2" facs="#PAG3_R2"/>
                    de l’Allemand ; qu’en revanche le
                    <lb xml:id="Prol_1_NUM_CAR_3_R3" n="3" facs="#PAG3_R3"/>
                    Tchèque et l’Allemand qui se haïssent
                    <lb xml:id="Prol_1_NUM_CAR_3_R4" n="4" facs="#PAG3_R4"/>
                    du fond du cœur sont des <mod type="subst"><del rend="overstrike"><unclear reason="overstrike" cert="low">cours</unclear></del><add resp="#FDS" place="above">parents</add></mod> très
                    <lb xml:id="Prol_1_NUM_CAR_3_R5" n="5" facs="#PAG3_R5"/>
                    rapprochés ; qu’à <del rend="overstrike"><unclear reason="illegible" cert="high">leur t</unclear><gap reason="illegible" extent="2" atLeast="2" atMost="3" unit="words"/></del> son tour le Magyar 
                    <lb xml:id="Prol_1_NUM_CAR_3_R6" n="6" facs="#PAG3_R6"/>
                    est <mod type="subst"><del rend="overstrike"><unclear reason="overstrike" cert="low">pro alsi</unclear></del><add resp="#FDS" place="above">proche</add></mod> cousin des popula
                    <lb xml:id="Prol_1_NUM_CAR_3_R7" n="7" facs="#PAG3_R7"/>
                    tions <del rend="overstrike"><unclear reason="illegible" cert="high">de la Finlandie, sur les costs</unclear><gap reason="illegible" extent="6" atLeast="6" atMost="7" unit="words"/></del>
                    <lb xml:id="Prol_1_NUM_CAR_3_R8" n="8" facs="#PAG3_R8"/>
                    <del rend="overstrike"><unclear reason="illegible" cert="high">Mar Baltique</unclear><gap reason="illegible" extent="2" atLeast="2" atMost="3" unit="words"/></del> finnoises de l’ <orgName ref="#empireRusse">empire</orgName>
                    <lb xml:id="Prol_1_NUM_CAR_3_R9" n="9" facs="#PAG3_R9"/>
                    <orgName ref="#empireRusse">russe</orgName>, sur les bords de la <placeName ref="#baltique">Baltique</placeName>, <del rend="overstrike"><unclear reason="illegible" cert="low">etc etc</unclear><gap reason="illegible" extent="2" atLeast="2" atMost="3" unit="words"/></del>
                    <lb xml:id="Prol_1_NUM_CAR_3_R10" n="10" facs="#PAG3_R10"/>
                    dont il <mod type="subst"><del rend="overstrike"><unclear reason="overstrike" cert="low">ne amant pas rien une; etc etc</unclear></del><add resp="#FDS" place="above">n’a jamais entendu parler,</add></mod>
                    <lb xml:id="Prol_1_NUM_CAR_3_R11" n="11" facs="#PAG3_R11"/>
                    qu’à leur tour les Tsiganes dont je parlais sont <mod type="subst"><del rend="overstrike"><unclear reason="overstrike" cert="low">les</unclear></del><add resp="#FDS" place="above">un</add></mod> peuple sorti de l’<placeName ref="#Inde">Inde</placeName>
                    <lb xml:id="Prol_1_NUM_CAR_3_R12" n="12" facs="#PAG3_R12"/>
                    – je passerais ensuite, et ceci nous
